:8080 {

  log {
    output stdout
    level debug
  }

  route /mqtt* {
    uri strip_prefix /mqtt
    reverse_proxy mqtt:1884
  }

  route /.well-known/sermas.json {
    rewrite /.well-known/sermas.json /api/.well-known/sermas.json
  }

  handle_path /minio-admin/* {
    reverse_proxy minio:9001
  }

  route /keycloak* {
    reverse_proxy keycloak:8080
  }

  route /keycloak-admin* {
    reverse_proxy keycloak:9000
  }

  # NOTE: will use dev environment as default proxy, otherwise use the toolkit static build from sermas-toolkit-api

  route /api* {
    reverse_proxy api:3000
  }
  
  route /* {
    reverse_proxy kiosk:3000
  }

}
